<% @title = 'Avatars' %>

<div class="page-header">
  <h1>
    Avatars
    <small class="pull-right">
      <span class="btn-group">
        <%= link_to new_avatar_path, :class => "btn btn-primary" do %>
          <span class="glyphicon glyphicon-plus"></span>
        <% end %>
      </span>
    </small>
  </h1>
</div>

<table class="table table-striped">
  <% @avatars.each do |a| %>
    <tr>
      <td>
        <%= link_to a.name, edit_avatar_path(a) %>
      </td>
      <td>
        <span class="btn-group pull-right">
          <%= link_to a, :method => :delete, :data => { confirm: "This avatar will be deleted from the server and no longer be available on any stages that it was assigned to.", title: "Are you sure you want to delete the avatar \"#{a.name}\"?" }, :class => "btn btn-danger" do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </span>
      </td>
    </tr>
  <% end %>
</table>
