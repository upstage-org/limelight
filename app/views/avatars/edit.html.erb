<% @title = "Edit Avatar \'#{@avatar.name}\'" %>

<div class="page-header">
  <h1>
    <%= @avatar.name %>
    <small class="pull-right">
      <span class="btn-group">
        <%= link_to @avatar, :method => :delete, :data => { confirm: "This avatar will be deleted from the server and no longer be available on any stages that it was assigned to.", title: "Are you sure you want to delete the avatar \"#{@avatar.name}\"?" }, :class => "btn btn-danger" do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
      </span>
    </small>
    <br>
    <small>Avatar</small>
    <%= render 'tags' %>
    <%= render 'stages' %>
  </h1>
</div>

<%= render 'form' %>
