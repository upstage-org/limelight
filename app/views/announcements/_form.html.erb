<%= form_for (@announcement || announcement) do |f| %>

<div class="form-group">
  <%= f.text_field :title, :class => 'form-control', :placeholder => 'Title' %>
  <% unless f.object.errors[:title].empty? %>
    <p class="text-danger">
      <% f.object.errors.full_messages_for(:title).each do |e| %>
        <%= e %><br>
      <% end %>
    </p>
  <% end %>
</div>

<div class="form-group">
  <%= f.text_field :subtitle, :class => 'form-control', :placeholder => 'Subtitle (Optional)' %>
  <% unless f.object.errors[:subtitle].empty? %>
    <p class="text-danger">
      <% f.object.errors.full_messages_for(:subtitle).each do |e| %>
        <%= e %><br>
      <% end %>
    </p>
  <% end %>
</div>

<div class="form_group">
  <span class="text-muted">by <%= f.object.author.username %></span>
</div>

<div class="form-group">
  <%= f.text_area :body, :class => 'form-control', :placeholder => 'Body text...' %>
  <% unless f.object.errors[:body].empty? %>
    <p class="text-danger">
      <% f.object.errors.full_messages_for(:body).each do |e| %>
        <%= e %><br>
      <% end %>
    </p>
  <% end %>
</div>

<div class="form-group">
  <span class="btn-group">
    <%= f.submit ( f.object.new_record? ? "Create" : "Update"), :class => "btn btn-primary" %>
  </span>
</div>

<% end %>
