<% @title = @announcement.title %>

<div class="pull-right">
  <div class="btn-group">
    <span class="btn-group">
      <%= link_to edit_announcement_path(@announcement), :class => "btn btn-default" do %>
        <span class="glyphicon glyphicon-edit"></span>
      <% end %>
      <%= link_to @announcement, :method => :delete, :data => { confirm: "This announcement will be deleted immediately and no longer be available", title: "Are you sure you want to delete this announcement?" }, :class => "btn btn-danger" do %>
        <span class="glyphicon glyphicon-trash"></span>
      <% end %>
    </span>
  </div>
</div>

<div class="page-header">
  <h1>
    <%= @announcement.title %>
    <br>
    <small>
      <%= @announcement.subtitle unless @announcement.subtitle.blank? %>
    </small>
  </h1>
  <p class="text-muted">by <%= @announcement.author.nickname %></p>
  <p class="text-muted">Last Modified: <%= localize(@announcement.updated_at, :format => :long) %></p>
</div>

<div>
  <%= @announcement.body.html_safe %>
</div>
