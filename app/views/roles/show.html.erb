<div class="page-header">
  <h1>
    <%= @role.name %>
    <small class="pull-right">
      <span class="btn-group">
        <%= link_to 'Edit', edit_role_path(@role), :class => "btn btn-default" %>
        <%= link_to 'Delete', @role, :method => :delete, :data => { confirm: "This role will be deleted from the server and no longer be available on any stages that it was assigned to.", title: "Are you sure you want to delete the role \"#{@role.name}\"?" }, :class => "btn btn-danger" %>
      </span>
    </small>
  </h1>
</div>
