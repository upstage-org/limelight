<div class="page-header">
  <h1>
    Roles
    <small class="pull-right">
      <span class="btn-group">
        <%= link_to 'Create', new_role_path, :class => "btn btn-primary" %>
      </span>
    </small>
  </h1>
  </h1>
</div>

<table class="table table-striped">
  <% @roles.each do |r| %>
    <tr>
      <td>
        <%= link_to r.name, r %>
      </td>
      <td>
        <span class="btn-group pull-right">
          <%= link_to 'Edit', edit_role_path(r), :class => "btn btn-default" %>
          <%= link_to 'Delete', r, :method => :delete, :data => { confirm: "This role will be deleted immediately and no longer be available on any stages that it was assigned to.", title: "Are you sure you want to delete the role \"#{r.name}\"?" }, :class => "btn btn-danger" %>
        </span>
      </td>
    </tr>
  <% end %>
</table>
