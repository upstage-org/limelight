<div class="col-xs-12 col-sm-4 col-md-3 col-lg-2">
  <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title"><%= link_to medium.name, medium %></h4>
      </div>
      <div class="panel-body">
        <% if medium.instance_of? Sound %>
          <%= audio_tag medium.source.url, :controls => true %>
        <% else %>
          <%= link_to medium do %>
            <%= image_tag medium.source.url, :alt => medium.name, :class => 'img-responsive' %>
          <% end %>
        <% end %>
      </div>
      <div class="panel-footer">
        <span class="btn-group btn-group-sm pull-right" data-toggle="modal" data-target="#modal-<%= "#{medium.class.name.demodulize}-#{medium.name}" %>">
            <span class="glyphicon glyphicon-trash"></span>
        </span>
        <div class="clearfix"></div>
      </div>
  </div>
</div>
