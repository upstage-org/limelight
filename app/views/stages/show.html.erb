<% @title = @stage.name %>

<div class="page-header">
  <h1>
    <%= @stage.name %>
    <small class="pull-right">
      <span class="btn-group">
        <%= link_to 'Edit', edit_stage_path(@stage), :class => "btn btn-default" %>
          <a class="btn btn-default" href="#" data-toggle="modal" data-target="#cloneStageModal">
            Clone
          </a>
        <%= link_to 'Delete', @stage, :method => :delete, :data => { confirm: "The stage \"#{@stage.name}\" will be removed. Are you sure?", title: "Confirmation" }, :class => "btn btn-danger" %>
      </span>
    </small>
    <br>
    <small>Stage</small>
    <%= render 'tags' %>
  </h1>
</div>

<div class="col-lg-4 col-sm-12 clearfix">
    <%= render 'avatars' %>
</div>

<div class="col-lg-4 col-sm-12 clearfix">
  <%= render 'backdrops' %>
</div>

<div class="col-lg-4 col-sm-12 clearfix">
    <%= render 'sounds' %>
</div>

<%= render 'clone_stage' %>
