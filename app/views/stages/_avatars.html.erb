<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">Avatars</h4>
  </div>
  <div class="panel-body">
    <% @stage.avatars.order(:name).each do |a| %>
      <div class="row">
        <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
          <%= link_to a.name, a %>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
            <span class="btn-group btn-group-xs pull-right">
              <%= link_to [@stage, a], :method => :delete, :data => { confirm: "The avatar \"#{a.name}\" will be unassigned from \"#{@stage.name}\".", title: "Are you sure?" }, :class => "btn btn-danger" do %>
                <span class="glyphicon glyphicon-minus"></span>
              <% end %>
            </span>
        </div>
      </div>
    <% end %>
  </div>
  <div class="panel-footer clearfix">
    <span class="btn-group btn-group-xs pull-right">
      <a class="btn btn-primary" href="#" data-toggle="modal" data-target="#assignAvatarsModal">
        <span class="glyphicon glyphicon-plus"></span>
      </a>
    </span>
  </div>
</div>

<%= render 'assign_avatars' %>
