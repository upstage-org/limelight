<div id="cloneStageModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_tag stage_clone_path(@stage) do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Clone Stage</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <%= text_field_tag 'name', "#{@stage.name} (clone)", :class => 'form-control', :placeholder => "Name" %>
        </div>
        <div class="form-group">
          <%= label_tag do %>
            <%= check_box_tag 'include_media', 'yes', true %> Media
            <%= check_box_tag 'include_avatars', 'yes', true %> Avatars
          <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" name="confirm" class="btn btn-success">
          <span class="glyphicon glyphicon-ok"></span>
        </button>
      </div>
      <% end %>
    </div>
  </div>
</div>
