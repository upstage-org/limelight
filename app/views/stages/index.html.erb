<% @title = 'Stages' %>

<div class="page-header">
  <h1>
    Stages
    <small class="pull-right">
      <span class="btn-group">
        <%= link_to 'Create', new_stage_path, :class => "btn btn-primary" %>
      </span>
    </small>
  </h1>
  </h1>
</div>

<table class="table table-striped">
  <% @stages.each do |s| %>
    <tr>
      <td>
        <%= link_to s.name, s %>
      </td>
      <td>
        <span class="btn-group pull-right">
          <%= link_to 'Edit', edit_stage_path(s), :class => "btn btn-default" %>
          <%= link_to 'Delete', s, :method => :delete, :data => { confirm: "Are you sure you want to delete the stage \"#{s.name}\"?", title: "Confirmation" }, :class => "btn btn-danger" %>
        </span>
      </td>
    </tr>
  <% end %>
</table>
