<%= form_for @stage do |f| %>

<div class="form-group">
  <%= f.text_field :name, :class => 'form-control', :placeholder => 'Name' %>
  <% unless @stage.errors[:name].empty? %>
    <p class="text-danger">
      <% @stage.errors.full_messages_for(:name).each do |e| %>
        <%= e %><br>
      <% end %>
    </p>
  <% end %>
</div>

<div class="form-group">
  <small>Owned by: <%= @stage.owner.username %></small>
</div>

<div class="form-group">
  <%= f.submit ( @stage.new_record? ? 'Create' : 'Edit' ), :class => 'btn btn-primary' %>
</div>

<% end %>
