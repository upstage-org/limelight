<% @title = 'Sounds' %>

<div class="page-header">
  <h1>
    Sounds
    <small class="pull-right">
      <span class="btn-group">
        <%= link_to new_sound_path, :class => "btn btn-primary" do %>
          <span class="glyphicon glyphicon-plus"></span>
        <% end %>
      </span>
    </small>
  </h1>
</div>

<table class="table table-striped">
  <% @sounds.each do |s| %>
    <tr>
      <td>
        <%= link_to s.name, edit_sound_path(s) %>
      </td>
      <td>
        <span class="btn-group pull-right">
          <%= link_to s, :method => :delete, :data => { confirm: "It will be deleted from the server and no longer available on any stages that it was assigned to.", title: "Are you sure you want to delete the sound \"#{s.name}\"?" }, :class => "btn btn-danger" do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </span>
      </td>
    </tr>
  <% end %>
</table>
