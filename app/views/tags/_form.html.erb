<%= form_with :model => @tag do |f| %>

<div class="form-group">
  <%= f.text_field :name, :class => 'form-control', :placeholder => 'Name' %>
  <% unless @tag.errors[:name].empty? %>
    <p class="text-danger">
      <% @tag.errors.full_messages_for(:name).each do |e| %>
        <%= e %><br>
      <% end %>
    </p>
  <% end %>
</div>

<div class="form-group">
  <%= f.submit ( @tag.new_record? ? 'Create' : 'Edit' ), :class => 'btn btn-primary' %>
</div>

<% end %>
