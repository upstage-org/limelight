<div class="page-header">
  <h1>
    <%= @tag.name %>
    <small class="pull-right">
      <span class="btn-group">
        <%= link_to 'Delete', @tag, :method => :delete, :data => { confirm: "This tag will be deleted from the server and no be longer available on any stages that it was assigned to.", title: "Are you sure you want to delete the tag \"#{@tag.name}\"?" }, :class => "btn btn-danger" %>
      </span>
    </small>
  </h1>
</div>
