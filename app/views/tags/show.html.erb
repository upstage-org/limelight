<div class="page-header">
  <h1>
    <%= @tag.name %>
    <small class="pull-right">
      <span class="btn-group">
        <%= link_to 'Delete', @tag, :method => :delete, :data => { confirm: "Are you sure?" }, :class => "btn btn-danger" %>
      </span>
    </small>
  </h1>
</div>

<table id = "tagtable" class="table table-striped">
	<thead>
		<tr>
			<th onclick="sortTable(0)" style="cursor:pointer">Name</th>
			<th onclick="sortTable(1)" style="cursor:pointer">Type</th>
		</tr>
	</thead>
	<tbody>
  <tr>
  </tr>
   <% @tag.stages.each do |s| %>
      <tr>
        <td><%= link_to s.name, s %></td>
        <td><%= s.class.name %></td>
      </tr>
    <% end %>
    <% @tag.sounds.each do |s| %>
      <tr>
        <td><%= link_to s.name, s %></td>
        <td><%= s.class.name %></td>
      </tr>
    <% end %>
    <% @tag.backdrops.each do |b| %>
      <tr>
        <td><%= link_to b.name, b %></td>
        <td><%= b.class.name %></td>
      </tr>
    <% end %>    	
    <% @tag.avatars.each do |a| %>
      <tr>
        <td><%= link_to a.name, a %></td>
        <td><%= a.class.name %></td>
      </tr>
    <% end %>
	</tbody>
</table>