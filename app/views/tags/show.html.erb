<div class="page-header">
  <h1>
    <%= @tag.name %>
    <small class="pull-right">
      <span class="btn-group">
        <%= link_to 'Delete', @tag, :method => :delete, :data => { confirm: "Are you sure?" }, :class => "btn btn-danger" %>
      </span>
    </small>
  </h1>
</div>


<table id = "tagtable" class="table table-striped">
	<thead>
		<tr>
			<th onclick="sortTable(0)" style="cursor:pointer">Name</th>
			<th onclick="sortTable(1)" style="cursor:pointer">Type</th>
		</tr>
	</thead>
	<tbody>
		<%= @tags.each do |t| %>
  			<tr>
  				<td><%= link_to @medium, t %></td>
          <td><%= link_to @tags.name, t %></td>
          <td><%= t.class.name %></td>
          <td><%= t.class.name %></td>
  			</tr>
		<% end %>
	</tbody>
</table>