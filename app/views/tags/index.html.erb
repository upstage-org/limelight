<div class="page-header">
  <h1>
    Tags
    <small class="pull-right">
      <span class="btn-group">
        <%= link_to 'Create', @create_path, :class => "btn btn-primary" %>
      </span>
    </small>
  </h1>
  </h1>
</div>

<table class="table table-striped">
  <% @tags.each do |t| %>
    <tr>
      <td>
        <%= link_to t.name, t %>
      </td>
      <td>
        <span class="btn-group pull-right">
          <%= link_to @perspective.present? ? 'Unassign' : 'Delete', [@perspective, t], :method => :delete, :data => { confirm: "The tag \"#{t.name}\" will be removed. Are you sure?", title: "Confirmation" }, :class => "btn btn-danger" %>
        </span>
      </td>
    </tr>
  <% end %>
</table>
