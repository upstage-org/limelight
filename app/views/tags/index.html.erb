<div class="page-header">
  <h1>
    Tags
    <small class="pull-right">
      <span class="btn-group">
        <%= link_to 'Add', @create_path, :class => "btn btn-primary" if @create_path.present? %>
      </span>
    </small>
  </h1>
  </h1>
</div>

<table class="table table-striped">
  <% @tags.each do |t| %>
    <tr>
      <td>
        <%= link_to t.name, t %>
      </td>
      <td>
        <span class="btn-group pull-right">
          <%= link_to @perspective.present? ? 'Unassign' : 'Delete', [@perspective, t], :method => :delete, :data => { confirm: "This tag will be deleted immediately and no longer be available on any stages that it was assigned to.", title: "Are you sure you want to delete the tag \"#{t.name}\"?" }, :class => "btn btn-danger" %>
        </span>
      </td>
    </tr>
  <% end %>
</table>
